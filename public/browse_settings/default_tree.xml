<?xml version="1.0" encoding="UTF-8"?>
<root>
    <!--This document describes degailt settings for the faceted browse
    @view = Name of the field / item as seen by user
    @solrName = Value returned by Solr (for fields or values)
    collapse = is the list item collapsed or not be default?
    showNum = Number if items to show by default. If there are more than this number of items, then hide the additional items
    -->
    <field view="Context" solrName="default_context" ocParam="default_context" sort="1">
        <showWhen>
            <filter solrName="*" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>10</showNum>
            <itemSort type="default" />
        </settings>
    </field>
    <field view="Project" solrName="project_name" ocParam="proj" sort="1">
        <showWhen>
            <filter solrName="*" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>10</showNum>
            <itemSort type="organize"> 
                <subField view="Excavation Projects" collapse="true" showType="list" sort="1">
                    <item view="Petra Great Temple Excavations" solrName="Petra Great Temple Excavations" sort="1" />
                    <item view="Kenan Tepe" solrName="Kenan Tepe" sort="2" />
                    <item view="Murlo" solrName="Murlo" sort="3" />
                    <item view="Mikt’sqaq Angayuk Finds" solrName="Mikt’sqaq Angayuk Finds" sort="4" />
                </subField>
                <subField view="DINAA Projects" collapse="true" showType="list" sort="2">
                    <item view="Alabama Site Files" solrName="Alabama Site Files" sort="1" />
                    <item view="Georgia Archaeological Site File (GASF)" solrName="Georgia Archaeological Site File (GASF)" sort="2" />
                    <item view="Florida Site Files" solrName="Florida Site Files" sort="3" />
                    <item view="Kentucky Site Files" solrName="Kentucky Site Files" sort="4" />
                    <item view="Illinois Site Files" solrName="Illinois Site Files" sort="5" />
                    <item view="Indiana Site Files" solrName="Indiana Site Files" sort="6" />
                    <item view="Iowa Site Files" solrName="Iowa Site Files" sort="7" />
                    <item view="Missouri Site Files" solrName="Missouri Site Files" sort="8" />
                    <item view="South Carolina SHPO" solrName="South Carolina SHPO" sort="9" />
                    <item view="Virginia Site Files" solrName="Virginia Site Files" sort="10" />
                </subField>
                <subField view="Domestication Dispersals in Anatolia" collapse="true" showType="list" sort="3">
                    <item view="Çatalhöyük Zooarchaeology" solrName="Çatalhöyük Zooarchaeology" sort="1" />
                    <item view="Çatalhöyük Area TP Zooarchaeology" solrName="Çatalhöyük Area TP Zooarchaeology" sort="2" />
                    <item view="Ilıpınar Zooarchaeology" solrName="Ilıpınar Zooarchaeology" sort="3" />
                    <item view="Zooarchaeology of Neolithic Ulucak" solrName="Zooarchaeology of Neolithic Ulucak" sort="4" />
                    <item view="Erbaba Höyük and Suberde Zooarchaeology" solrName="Erbaba Höyük and Suberde Zooarchaeology" sort="5" />
                    <item view="Köşk Höyük Faunal Data" solrName="Köşk Höyük Faunal Data" sort="6" />
                    <item view="Zooarchaeology of Öküzini Cave" solrName="Zooarchaeology of Öküzini Cave" sort="7" />
                    <item view="Zooarchaeology of Karain Cave B" solrName="Zooarchaeology of Karain Cave B" sort="8" />
                    <item view="Barçın Höyük Zooarchaeology" solrName="Barçın Höyük Zooarchaeology" sort="9" />
                    <item view="Pınarbaşı 1994: Animal Bones" solrName="Pınarbaşı 1994: Animal Bones" sort="10" />
                    <item view="Faunal Data from Neolithic Menteşe" solrName="Faunal Data from Neolithic Menteşe" sort="11" />
                    <item view="Çukuriçi Höyük Zooarchaeology" solrName="Çukuriçi Höyük Zooarchaeology" sort="12" />
                    <item view="Domuztepe Excavations" solrName="Domuztepe Excavations" sort="13" />
                </subField>
                <subField view="Other Zooarchaeology" collapse="true" showType="list" sort="3">
                    <item view="Zooarchaeology of Medieval Emden" solrName="Zooarchaeology of Medieval Emden" sort="1" />
                    <item view="Chogha Mish Fauna" solrName="Chogha Mish Fauna" sort="2" />
                    <item view="Tal-e Malyan Zooarchaeology" solrName="Tal-e Malyan Zooarchaeology" sort="3" />
                    <item view="Hazor: Zooarchaeology" solrName="Hazor: Zooarchaeology" sort="4" />
                    <item view="West Stow West Zooarchaeology" solrName="West Stow West Zooarchaeology" sort="5" />
                    <item view="Köşk Höyük Faunal Data" solrName="Köşk Höyük Faunal Data" sort="6" />
                    <item view="Harvard Peabody Mus. Zooarchaeology" solrName="Harvard Peabody Mus. Zooarchaeology" sort="7" />
                    <item view="Presidio of San Francisco" solrName="Presidio of San Francisco" sort="8" />
                </subField>
                <subField view="Surveys" collapse="true" showType="list" sort="4">
                    <item view="Pyla-Koutsopetria Archaeological Project" solrName="Pyla-Koutsopetria Archaeological Project" sort="1" />
                    <item view="Rough Cilicia" solrName="Rough Cilicia" sort="2" />
                </subField>
                <subField view="Archaeometry" collapse="true" showType="list" sort="5">
                    <item view="Asian Stoneware Jars" solrName="Asian Stoneware Jars" sort="1" />
                    <item view="Aegean Archaeomalacology" solrName="Aegean Archaeomalacology" sort="2" />
                </subField>
                <subField view="Specialized Collections" collapse="true" showType="list" sort="6">
                    <item view="Balance Pan Weights from Nippur" solrName="Balance Pan Weights from Nippur" sort="1" />
                    <item view="San Diego Archaeological Center" solrName="San Diego Archaeological Center" sort="2" />
                    <item view="Bade Museum" solrName="Bade Museum" sort="3" />
                    <item view="Dove Mountain Groundstone" solrName="Dove Mountain Groundstone" sort="4" />
                </subField>
                <subField view="Other Projects" collapse="true" showType="remainder" showNum="100" sort="3" />
            </itemSort>
        </settings>
    </field>
    <field view="Category" solrName="item_class" ocParam="cat" sort="3">
        <showWhen>
            <filter solrName="*" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>15</showNum>
            <itemSort type="default" />
        </settings>
    </field>
    <field view="User Tag" solrName="user_tag" ocParam="tag" sort="4">
        <showWhen>
            <filter solrName="*" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>5</showNum>
            <itemSort type="default" />
        </settings>
    </field>
    <field view="Tag Creator" solrName="tag_creator_name" ocParam="tagger" sort="5">
        <showWhen>
            <filter solrName="tag" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>3</showNum>
            <itemSort type="default" />
        </settings>
    </field>
    <field view="Descriptive Variable" solrName="variable_NOB" ocParam="prop" sort="6">
        <showWhen>
            <filter solrName="context" value="2" />
            <filter solrName="item_class" value="*" />
            <filter solrName="project_name" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>10</showNum>
            <itemSort type="default" />
        </settings>
    </field>
    <field view="Values for " solrName="var_NOB_val" ocParam="prop" sort="7">
        <showWhen>
            <filter solrName="variable_NOB" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>10</showNum>
            <itemSort type="default" />
        </settings>
    </field>
    <field view="Descriptive Proprety" solrName="top_taxon" ocParam="taxa" sort="6">
        <showWhen>
            <filter solrName="context" value="2" />
            <filter solrName="item_class" value="*" />
            <filter solrName="project_name" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>12</showNum>
            <itemSort type="default" />
        </settings>
    </field>
    <field view="Values for " solrName="down_taxon" ocParam="taxa" sort="7">
        <showWhen>
            <filter solrName="top_taxon" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>12</showNum>
            <itemSort type="default" />
        </settings>
    </field>
    <field view="Related People" solrName="person_link" ocParam="person" sort="8">
        <showWhen>
            <filter solrName="context" value="2" />
            <filter solrName="item_class" value="*" />
            <filter solrName="project_name" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>10</showNum>
            <itemSort type="default" />
        </settings>
    </field>
    <field view="Date Range" solrName="date" ocParam="date" sort="9">
        <showWhen>
            <filter solrName="*" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>100</showNum>
            <itemSort type="default" />
        </settings>
    </field>
    <field view="Image Media Count" solrName="image_media_count" sort="10">
        <showWhen>
            <filter solrName="*" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>10</showNum>
            <itemSort type="default" />
        </settings>
    </field>
    <projectFiles>
        <project solrName="Domuztepe Excavations" filename="/browse_settings/domuz_tree.xml" />
    </projectFiles>
</root>

